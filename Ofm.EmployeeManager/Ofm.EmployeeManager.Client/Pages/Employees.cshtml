@page
@model Ofm.EmployeeManager.Client.Pages.EmployeesModel
@{
    ViewData["Title"] = "Ofima | Empleados";
}

<button type="button" id="newEmployee" class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#employeeModal">
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16">
        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
        <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4" />
    </svg> Añadir Empleado
</button>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nombre</th>
            <th scope="col">Apellido</th>
            <th scope="col">Salario</th>
            <th scope="col">Puesto</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody id="TableEmployees">
    </tbody>
</table>

<div class="modal fade" id="employeeModal" tabindex="-1" aria-labelledby="employeeModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="employeeModalLabel">Formulario de Empleado</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="employeeForm">
                    <input type="hidden" class="form-control" id="employeeId">
                    <div class="mb-3">
                        <label for="employeeFirstName" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="employeeFirstName" placeholder="Ingrese el nombre" required>
                    </div>
                    <div class="mb-3">
                        <label for="employeeLastName" class="form-label">Apellido</label>
                        <input type="text" class="form-control" id="employeeLastName" placeholder="Ingrese el apellido" required>
                    </div>
                    <div class="mb-3">
                        <label for="employeeEmail" class="form-label">Correo Personal</label>
                        <input type="email" class="form-control" id="employeeEmail" placeholder="Ingrese el correo personal" required>
                    </div>
                    <div class="mb-3">
                        <label for="employeeEmailCompany" class="form-label">Correo Corporativo</label>
                        <input type="email" class="form-control" id="employeeEmailCompany" placeholder="Ingrese el correo corporativo" required>
                    </div>
                    <div class="mb-3">
                        <label for="employeePassword" class="form-label">Contraseña</label>
                        <input type="password" class="form-control" id="employeePassword" placeholder="Ingrese la contraseña">
                    </div>
                    <div class="mb-3">
                        <label for="employeeSalary" class="form-label">Salario</label>
                        <input type="number" class="form-control" id="employeeSalary" placeholder="Ingrese el salario" required>
                    </div>
                    <div class="mb-3">
                        <label for="typeEmployeeId" class="form-label">Tipo de Empleado</label>
                        <select class="form-select" id="typeEmployeeId" required>
                            <option value="" disabled selected>Seleccione el tipo de empleado</option>
                            <option value="1">Manager</option>
                            <option value="2">Developer</option>
                            <option value="3">Designer</option>
                        </select>
                    </div>
                    <input type="hidden" id="employeeId" value="0">
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" id="saveEmployee">Guardar</button>
                <button type="button" class="btn btn-primary" id="updateEmployee">Guardar</button>
            </div>
        </div>
    </div>
</div>
